{
  "tasks": {
    "test": "deno test -A --unstable --jobs 3 --import-map=./importMap.test.json src/",
    "test:puppeteer": "deno test -A --unstable workspace/tests/"
  },
  "compilerOptions": {
    "jsx": "react-jsxdev",
